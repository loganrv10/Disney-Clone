<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dwlayout"
    tools:context=".MainActivity"
    android:background="#09155A">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawernav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#2B3A8E"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="left"

    app:menu="@menu/bottom_nav_menu" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <View
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/Hotstarlogo">

        </View>

        <ImageView
            android:id="@+id/hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/hotstarlogo"
            android:layout_width="150dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/hamburger"
            android:scaleType="fitXY"
            android:src="@drawable/hotstarhorzlogo" />

        <Button
            android:id="@+id/subbutton"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/hotstarlogo"
            android:backgroundTint="#00AFFF"
            android:text="subscribe"
            android:textSize="8dp"


            />

        <ImageView
            android:id="@+id/searchbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"

            android:src="@drawable/ic_baseline_search_24" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navigationBottom"
            android:layout_below="@+id/emptyView"
            android:background="@color/white" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/Hotstarlogo"
            app:itemIconTint="@color/white"
            app:itemRippleColor="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>